<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.usp.willianerodrigues.course">

    <application
        android:name=".CourseApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_circle"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.PresentationActivity" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/activity_login" />
        <activity
            android:name=".activity.AssitVirtualActivit"
            android:label="" />
        <activity
            android:name=".activity.MainActivity"
            android:label=""
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.ExerciceActivity" />
        <activity android:name=".activity.FinishExerciceActivity" />
        <activity android:name=".activity.RegistroActivity" />
        <activity android:name=".activity.AboutActivity"></activity>
    </application>

</manifest>