<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <br.com.usp.willianerodrigues.course.util.RobotoBold
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:gravity="start"
        android:text="Ao concluir a elaboração de um texto no MS Word 2013, um funcionário decide formatar a última palavra do texto com: negrito e itálico. Para realizar estas operações, ele seleciona a última palavra e usa a seguinte sequência de combinações de teclas:"
        android:textColor="@color/md_text"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/exercice_advanced_2_o1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_button_purple"
        android:clickable="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <br.com.usp.willianerodrigues.course.util.RobotoRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="Ctrl+B, Ctrl+S"
            android:textColor="@color/md_purple_500"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/exercice_advanced_2_o2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_button_purple"
        android:clickable="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <br.com.usp.willianerodrigues.course.util.RobotoRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="Ctrl+I, Ctrl+P"
            android:textColor="@color/md_purple_500"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/exercice_advanced_2_o3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_button_purple"
        android:clickable="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <br.com.usp.willianerodrigues.course.util.RobotoRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="Ctrl+N, Ctrl+I"
            android:textColor="@color/md_purple_500"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/exercice_advanced_2_o4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_button_purple"
        android:clickable="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <br.com.usp.willianerodrigues.course.util.RobotoRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="Ctrl+A, Ctrl+F4"
            android:textColor="@color/md_purple_500"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/exercice_advanced_2_nao_sei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_button_purple"
        android:clickable="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <br.com.usp.willianerodrigues.course.util.RobotoRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="Não sei"
            android:textColor="@color/md_purple_500"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>