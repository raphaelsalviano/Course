<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:gravity="center"
    android:elevation="4dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ico_item_ranking"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/img_description"
        app:srcCompat="@drawable/ic_people_user" />

    <br.com.usp.willianerodrigues.course.util.RobotoRegular
        android:id="@+id/item_name_ranking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:gravity="start"
        android:text="@string/internet"
        android:textColor="@color/md_purple_500"
        android:textSize="14sp" />

    <br.com.usp.willianerodrigues.course.util.RobotoRegular
        android:id="@+id/item_pontuacao_ranking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:gravity="end"
        android:text="@string/internet"
        android:textColor="@color/md_purple_500"
        android:textSize="14sp" />

</LinearLayout>